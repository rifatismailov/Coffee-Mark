<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Оголошення атрибутів ОКРЕМО -->
    <attr name="buttonColor" format="color"/>
    <attr name="borderColor" format="color"/>
    <attr name="borderWidth" format="dimension"/>
    <attr name="buttonRadius" format="dimension"/>
    <attr name="buttonText" format="string"/>
    <attr name="buttonProgress" format="boolean"/>
    <attr name="backgroundColor" format="color"/>
    <attr name="cornerRadius" format="dimension"/>
    <attr name="outerBackgroundColor" format="color"/>

    <!-- CustomButton використовує атрибути -->
    <declare-styleable name="CustomButton">
        <attr name="buttonColor"/>
        <attr name="borderColor"/>
        <attr name="borderWidth"/>
        <attr name="buttonRadius"/>
        <attr name="buttonText"/>
        <attr name="buttonProgress"/>
    </declare-styleable>

    <!-- CustomImageView використовує ті ж атрибути -->
    <declare-styleable name="CustomImageView">
        <attr name="backgroundColor"/>
        <attr name="borderColor"/>
        <attr name="borderWidth"/>
        <attr name="cornerRadius"/>
        <attr name="buttonText"/>
        <attr name="buttonProgress"/>
    </declare-styleable>

    <!-- CoffeeView -->
    <declare-styleable name="CoffeeView">
        <attr name="outerBackgroundColor"/>
    </declare-styleable>

</resources>
